generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id
  email     String   @unique // 用于登录的唯一邮箱
  username  String?           // 用户昵称（可选）
  avatarUrl String?           // 头像 URL（可选）
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  threads   Thread[]
}

model Thread {
  id        String   @id @default(uuid())
  userId    String
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

/// Event 模型 - 存储会话中的事件数据
/// 用于在节点运行完成前持久化事件，防止用户中途退出导致数据丢失
/// 注意：不使用外键约束，因为 Event 可能在 Thread 创建之前被保存（backend 先于 frontend 保存）
model Event {
  /// 事件唯一标识（使用后端生成的 event id）
  id        String   @id
  /// 所属会话（不使用外键，允许 thread 记录稍后创建）
  threadId  String
  /// 事件类型，格式为 /{roleName}/{subType}
  eventType String
  /// 事件状态: pending | running | finished | error
  status    String
  /// 事件内容（JSON 格式）
  content   Json
  /// 父事件 ID（可选，用于构建事件树）
  parentId  String?
  /// 事件顺序（用于排序恢复）
  sequence  Int
  /// 创建时间
  createdAt DateTime @default(now())
  /// 更新时间
  updatedAt DateTime @updatedAt

  @@index([threadId])
  @@index([threadId, sequence])
}

model checkpoint_blobs {
  thread_id     String
  checkpoint_ns String @default("")
  channel       String
  version       String
  type          String
  blob          Bytes?

  @@id([thread_id, checkpoint_ns, channel, version])
}

model checkpoint_migrations {
  v Int @id
}

model checkpoint_writes {
  thread_id     String
  checkpoint_ns String  @default("")
  checkpoint_id String
  task_id       String
  idx           Int
  channel       String
  type          String?
  blob          Bytes

  @@id([thread_id, checkpoint_ns, checkpoint_id, task_id, idx])
}

model checkpoints {
  thread_id            String
  checkpoint_ns        String  @default("")
  checkpoint_id        String
  parent_checkpoint_id String?
  type                 String?
  checkpoint           Json
  metadata             Json    @default("{}")

  @@id([thread_id, checkpoint_ns, checkpoint_id])
}
