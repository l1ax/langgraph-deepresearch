generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// 应用层数据模型
// ============================================
// 注意：Checkpoint 相关表由 LangGraph PostgresSaver 自动管理
// 不应在此 schema 中定义，避免与 LangGraph 的 migration 冲突
// ============================================

model User {
  id        String   @id
  email     String   @unique // 用于登录的唯一邮箱
  username  String?           // 用户昵称（可选）
  avatarUrl String?           // 头像 URL（可选）
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  threads   Thread[]
}

model Thread {
  id        String   @id @default(uuid())
  userId    String
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

/// Event 模型 - 存储会话中的事件数据
/// 由 Proxy 在 SSE 流转发时自动持久化
/// 用于恢复历史对话和未完成的执行
/// 注意：不使用外键约束，因为 Event 可能在 Thread 创建之前被保存
model Event {
  /// 事件唯一标识（使用后端生成的 event id）
  id        String   @id
  /// 所属会话（不使用外键，允许 thread 记录稍后创建）
  threadId  String
  /// 事件类型，格式为 /{roleName}/{subType}
  eventType String
  /// 事件状态: pending | running | finished | error
  status    String
  /// 事件内容（JSON 格式）
  content   Json
  /// 父事件 ID（可选，用于构建事件树）
  parentId  String?
  /// 事件顺序（用于排序恢复）
  sequence  Int
  /// 创建时间
  createdAt DateTime @default(now())
  /// 更新时间
  updatedAt DateTime @updatedAt

  @@index([threadId])
  @@index([threadId, sequence])
}

